<%= form_for(user) do |f| %>

  <%= render 'shared/errors_form', model: user %>

  <div class="form-group col-sm-12">
    <%= f.label :email, 'Adresse mail' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :firstname, 'Prénom' %>
    <%= f.text_field :firstname, class: 'form-control' %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :lastname, 'Nom' %>
    <%= f.text_field :lastname, class: 'form-control' %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :password, 'Mot de passe' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>


<div class="form-group col-sm-6">
    <%= f.label :password_confirmation, 'Confirmation du mot de passe' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit "Créer son compte", class: 'btn btn-primary' %>
  </div>
<% end %>
