<%= bootstrap_form_for  menu do |f| %>
  <%= render 'shared/errors_form', model: menu %>
  <%= f.text_field :name, label: 'Nom' %>
  <%= f.text_field :description %>
  <%# = render 'shared/form_input_picture.html', form: f, model: menu %>
  <%# = f.check_box :activate, label: 'Activer' %>
  <%= f.text_area :content, label: 'Contenu' %>
  <%# = f.text_field :tags %>
  <%= f.number_field :price, label: 'Prix' %>
  <%# = render 'select_dishes', menu: menu, cache: true %>
  <%= f.submit 'Confirmer' %>
<% end %>
<!-- re-render dish list on form send -->
<script type="text/javascript">
  $('form.new_menu, form.edit_menu').on('submit', function(e){
    e.preventDefault();
    var form = $(this);
    $.ajax({
       url : form.attr('action'),
       type : form.attr('method'),
       data : form.serialize(),
       dataType : 'html',
       success : function(result, status){
        $('#menus-list').html(result);
       },
       error : function(result, statut, error){
        console.log(result);
       },
       complete : function(result, status){
        $('.ui-dialog').remove();
       }
    });
  });
</script>