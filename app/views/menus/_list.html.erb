  <div
    class="col-xs-12 col-md-6 col-lg-4 <%= 'editable' if admin? %>"
    <% if admin? %>
      data-url="<%= url_for edit_menu_path(menu) %>"
    <% end %>
  >
    <h3 class="menu"><%= menu.name %> <span class="price"><%= menu.price %> â‚¬</span></h3>
    <p>
      <%= menu.content.each_line do |line| %>
        <%= line %> <br>
      <% end %>
    </p>
  </div>
<% end %>