<% menus.each do |menu| %>
  <div class="jumbotron col-xs-12">
    <h2><%= link_to menu.name, menu %> <span class="label label-primary"><%= price menu.price %></span></h2>
    <p><%= menu.description %></p>
    <% if menu.tags %>
      <p><%= tags menu.tags %></p>
    <% end %>
    <% if menu.dishes.count != 0 %>
      <p class="text-right"><%= button_tag 'En savoir plus', type: 'button', class: 'menu-show-details btn btn-default', data: {id: menu.id} %></p>
    <% end %>
  </div>
  <p><%= menu.content %></p>
  <div id="menu-details-<%= menu.id %>" style="display: none">
    <%= render 'details', menu:  menu, cache: true %>
  </div>
<% end %>