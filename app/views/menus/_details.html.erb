<div class="col-sm-12">
  <%= image_tag menu.picture.thumb, class: 'img-circle section-img' if menu.picture? %>

  <p>
    <%= menu.content %><br/>
    <%= tags menu.tags %>
  </p>


  <p class="text-right lead">
    <%= price menu.price %>
  </p>

  <% if admin? %>
    <p class="text-right">
        <%= link_to 'editer', edit_menu_path(menu), class: "btn btn-default" %>
        <%= link_to 'Supprimer', menu, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
    </p>
  <% end %>
</div>
