<% if admin? %>
  <div class="col-xs-12 admin">
    <%= render 'toolbars/menus' %>
  </div>
<% end %>

<div class="col-xs-12">
  <h1>Menus</h1>
</div>

<div class="col-xs-12">
  <% @menus.each do |menu| %>

    <div class="jumbotron col-xs-12">
      <h2><%= link_to menu.name, menu %> <span class="label label-primary"><%= price menu.price %></span></h2>
      <p><%= menu.description %></p>

      <% if menu.tags %>
        <p><%= tags menu.tags %></p>
      <% end %>

    </div>

    <p><%= menu.content %></p>

    <%= render 'details', menu:  menu %>
  <% end %>
</div>