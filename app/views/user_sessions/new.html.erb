<div class="row">
  <%= form_for @user_session do |f| %>

    <%= render 'shared/errors_form', model: @user_session %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
