<%= form_for(category) do |f| %>
  <%= render 'shared/errors_form', model: category %>

  <div class="form-group">
    <%= f.label :name, 'Nom' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit 'Confirmer', class: 'btn btn-primary' %>
  </div>
<% end %>
