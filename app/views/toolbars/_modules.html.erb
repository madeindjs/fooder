<div class="btn-group col-xs-12" role="toolbar" aria-label="...">

  <% {
      'blog'      => 'le blog',
      'allergens' => 'les allergènes',
      'contact'   => 'le formulaire de contact'}.each do |module_name, description| %>

    <%= link_to activate_module_url(module: module_name, subdomain: @restaurant), class: "btn btn-default", method: :patch do %>
      <% activated = @restaurant.send("module_#{module_name}") %>
      <%= glyphicon(activated ? "check" : "unchecked") %> <%= activated ? "désactiver" : "activer"  %> <%= description %>
    <% end %>

  <% end %>

</div> 