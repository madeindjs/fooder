<%= form_for opening_hour do |f| %>
  <td><%= f.select :day , options_for_select(OpeningHour::DAYS , opening_hour.day), {}, class: 'form-control' %></td>

  <td>
    <div class='input-group date'>
      <%= f.time_field :opens , class: 'form-control timepicker' %>
    </div>
  </td>

  <td>
    <div class='input-group date'>
      <%= f.time_field :closes , class: 'form-control timepicker' %>
    </div>
  </td>

  <td>
    <div class='input-group date'>
      <%= f.date_field :valid_from , class: 'form-control' %>
    </div>
  </td>

  <td>
    <div class='input-group date'>
      <%= f.date_field :valid_through , class: 'form-control' %>
    </div>
  </td>
  
  <td>
    <% if opening_hour.new_record? %>
      <%= f.submit 'Ajouter', class: 'btn btn-primary' %>
    <% else %>
      <%= f.submit 'Mettre à jour', class: 'btn btn-primary' %>
      <%= link_to 'Supprimer', opening_hour, method: :delete, data: { confirm: 'Etes vous sûr?' }, class: 'btn btn-danger' %>
    <% end %>
  </td>
<% end %>