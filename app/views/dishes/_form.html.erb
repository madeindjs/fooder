<%= bootstrap_form_for dish, remote: true do |f| %>
  <%# = render 'shared/errors_form', model: dish %>
  <%= f.text_field :name, hide_label: true, placeholder: 'Nom' %>
  <div class="form-group">
      
    <%= collection_select :dish, :category_id, @restaurant.categories, :id, :name, {selected: dish.category_id}, { class: "form-control" }  %>
    <%= text_field_tag 'category[name]', nil, style: 'display: none', class: 'form-control', placeholder: 'Nom de la catégorie' %>
    <button id="new-category-button" class="btn btn-xs btn-default pull-right"><%= glyphicon 'plus' %></button>
  </div>
  <%= f.text_area :description, hide_label: true, placeholder: 'Description' %>
  <%# = render 'shared/form_input_picture.html', form: f, model: dish %>
  <%# = f.check_box :activate, label: 'Activer' %>
  <%# = f.text_field :tags %>
  <%= f.number_field :price, hide_label: true, append: '€', placeholder: 'prix' %>
  <%= f.submit 'Confirmer' %>
  <%# add delete button only if update form %>
<% end %>
<%= button_to('Supprimer', @dish, method: :delete, remote: true, form_class: 'delete_dish', class: 'btn btn-danger') if dish.id %>