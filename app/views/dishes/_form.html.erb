<%= form_for(dish) do |f| %>
  <%= render 'shared/errors_form', model: dish %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= collection_select :dish, :category_id, current_user.categories, :id, :name, {}, { class: "form-control" }  %>
  </div>

  <div class="form-group">
    <%= f.label :restaurant_id %>
    <%= collection_select :dish, :restaurant_id, current_user.restaurants, :id, :name, {}, { class: "form-control" }  %>
  </div>

  <div class="actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
