<p id="notice"><%= notice %></p>

<h1>Plats</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>User</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.category.name if dish.category %></td>
        <td><%= link_to dish.user.complete_name, dish.user %></td>
        <td><%= dish.restaurant_id %></td>
        <td>
          <%= link_to 'Show', restaurant_dish_path(dish, restaurant_id: dish.restaurant), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_restaurant_dish_path(dish, restaurant_id: dish.restaurant), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', restaurant_dish_path(dish, restaurant_id: dish.restaurant), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

