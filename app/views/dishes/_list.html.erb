<% admin = @restaurant && @restaurant.user == current_user %>

<% categories =  dishes.map{|d| d.category }.uniq %>


<div class="row">
  <% categories.each do |category| %>

    <div class="col-sm-6">
      <div class="row">
        <div class="col-xs-12">
          <h2><%= category.name %></h2>
        </div>
      </div>
      

      <% dishes.select{|d| d.category_id == category.id}.each do |dish| %>
        <div class="row">

          <% if admin %>
            <div class="col-xs-1" style="margin-top: 33px">
              <div class="btn-group-vertical btn-group-xs" role="group" aria-label="...">
                <%= link_to "Editer", edit_restaurant_dish_path(@restaurant, dish), class: 'btn btn-default btn-xs' %>
                <%= link_to "Supprimer", restaurant_dish_path(@restaurant, dish), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %>
              </div>
            </div><!-- end of toolbar -->

            <div class="col-xs-9 hidden">
              
            </div><!-- end of form -->

          <% end %>

          <div class="col-xs-9">
            <p>
              <strong><%= link_to dish.name, restaurant_dish_path(dish, restaurant_id: dish.restaurant_id) %></strong><br/>
              <%= dish.description %><br/>
              <%= tags dish.tags %>
            </p>
          </div><!--! .col-xs-10 -->

          <div class="col-xs-2">
            <p><strong><%= dish.price %>â‚¬</strong></p>
          </div>
        </div><!--! .row -->
      <% end # end of dishes%>



    </div>

      

      
        
      


  <% end # end of categories%> 
</div>
