<% categories =  dishes.map{|d| d.category }.uniq %>


<div class="row">
  <% categories.each do |category| %>

      <h2><%= category.name %></h2>

      <% dishes.select{|d| d.category_id == category.id}.each do |dish| %>
        <p><strong><%= link_to dish.name, restaurant_dish_path(dish, restaurant_id: dish.restaurant_id) %></strong> <%= dish.description %>
          <span class="text-right"><strong><%= dish.price %>â‚¬</strong></span>
          <% if dish.tags %>
            <br/>
            <% dish.tags.split(';').each do |tag| %>
              <span class="label label-info"><%= tag %></span>
            <% end %>
          <% end %>
          <br/>
          
        </p>
      <% end %>


  <% end %> 
</div>
