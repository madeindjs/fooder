<footer class="footer" style="margin-top: 200px">
  <div class="container">
    <div class="col-xs-12" style="padding-bottom: 50px">
      <%= @restaurant.complete_name %>
    </div>
    <!-- display list of usefull links -->
    <div class="col-sm-offset-1 col-sm-3 col-xs-4 tooltip-holder" <%= tooltip "Le plan du site est généré automatiquement en fonction des modules activé." %> >
      <strong>Plan du site</strong>
      <ul class="list-unstyled">
        <%= render "layouts/navigation_restaurant", cache: true %>
      </ul>
    </div>
    <div class="col-sm-3 col-xs-4 tooltip-holder" <%= tooltip "Gérez les liens vers les résaux sociaux" %> >
      <strong>Sur internet</strong>
      <ul class="list-unstyled">
        <% @restaurant.links.each do |link| %>
          <li><%= link_to  link.name, link.url %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-3 col-xs-4">
      <strong>Informations</strong>
      <ul class="list-unstyled">
        <li><%= link_to  'Coordonnées', contact_path %></li>
      </ul>
    </div>
  </div>
  <% unless @restaurant.user.premium? %>
    <div class="container tooltip-holder" <%= tooltip "Basculez sur un compte premium pour faire disparaitre ce message." %> >
      <p>Ce site web a été crée avec <%= glyphicon 'heart' %> sur <%= link_to "fooder.pro" , "http://fooder.pro" %>.</p>
      <span class="admin">
        <%= alert 'info', "Basculez sur un compte premium pour faire disparaitre ce message." if @restaurant.user == current_user %>
      </span>
    </div>
  <% end %>
</footer>