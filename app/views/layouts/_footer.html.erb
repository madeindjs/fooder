<footer class="footer">
      <div class="container">

      <% if @restaurant %>

        <div class="col-sm-offset-1 col-sm-3 col-xs-4" <%= tooltip "Le plan du site est généré automatiquement en fonction des modules activé." %> >
          <strong>Plan du site</strong>
          <ul class="list-unstyled">
              <%= render "layouts/navigation_restaurant" %>
          </ul>
        </div>

        <div class="col-xs-4" <%= tooltip "Gérez les liens vers les résaux sociaux" %> >
          <strong>Sur internet</strong>
          <ul class="list-unstyled">
              <% @restaurant.links.each do |link| %>
                <li><%= link_to  link.name, link.url %></li>
              <% end %>
          </ul>
        </div>

        <div class="col-sm-3 col-xs-4">
          <strong>Informations</strong>
          <ul class="list-unstyled">
              <li><%= link_to  'Coordonnées', contact_path %></li>
          </ul>
        </div>

      <% else %>
        <ul class="list">
            <li><%= link_to "accueil", home_url(subdomain: nil) %></li>
            <li><%= link_to 'Contactez-moi' , "mailto:RousseauAlexandre.Lyon@gmail.com?subject=Fooder" %></li>
            <li><%= link_to 'Apache License 2.0' , "http://www.apache.org/licenses/LICENSE-2.0.html" %></li>
          </ul>
      <% end %>

      </div>
</footer>