<h1>Admin</h1>



<div id="accordion">

  <h3>Page d'acceuil</h3>
  <div>
      <%= link_to new_section_path, class: "btn btn-default" do %>
        <%= glyphicon "plus" %> Ajouter du texte
      <% end %>
  </div>

  <h3>Carte</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">
      <%= link_to new_dish_path, class: "btn btn-default" do %>
        <%= glyphicon "plus" %> ajouter un plat
      <% end %>

      <%= link_to dishes_edit_path, class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> gérer les plats
      <% end %>
    </div>
  </div>


  <h3>Menu</h3>
  <div>
    <div class="btn-group-vertical col-xs-12 " role="toolbar" aria-label="...">

      <%= link_to new_menu_path, class: "btn btn-default" do %>
        <%= glyphicon "plus" %> ajouter un menu
      <% end %>

      <%= link_to menus_edit_path, class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> gérer les menus
      <% end %>

    </div>
  </div>

  <h3>Blog</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

      <% if @restaurant.module_blog %>

        <%= link_to new_post_path, class: "btn btn-default" do %>
          <%= glyphicon "plus" %> ajouter un article
        <% end %>

        <%= link_to posts_path, class: "btn btn-default" do %>
          <%= glyphicon "pencil" %> gérer les articles
        <% end %>

        <%= link_to activate_module_path(module: 'blog'), class: "btn btn-default", method: :patch do %>
          <%= glyphicon "unchecked" %> désactiver le blog
        <% end %>

      <% else %>

        <%= link_to activate_module_path(module: 'blog'), class: "btn btn-default", method: :patch do %>
          <%= glyphicon "unchecked" %> <%= @restaurant.module_blog ? "désactiver" : "activer"  %> le blog
        <% end %>

      <% end %>

    </div>
  </div>


  <h3>Restaurants</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

      <%= link_to new_restaurant_path, class: "btn btn-default" do %>
        <%= glyphicon "plus" %> Créer un restaurant
      <% end %>

      <%= link_to edit_restaurant_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> editer ce restaurant
      <% end %>

      <%= link_to opening_hours_path, class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> editer les horraires
      <% end %>

    </div> 
  </div>

  <h3>Modules</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

        
      <%= link_to activate_module_path(module: 'blog'), class: "btn btn-default", method: :patch do %>
        <%= glyphicon "unchecked" %> <%= @restaurant.module_blog ? "désactiver" : "activer"  %> le blog
      <% end %>

      <%= link_to activate_module_path(module: 'allergens'), class: "btn btn-default", method: :patch do %>
        <%= glyphicon "unchecked" %> <%= @restaurant.module_allergens ? "désactiver" : "activer"  %> les allergènes
      <% end %>

    </div> 
  </div>

</div>
