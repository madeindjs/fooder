<h1>Admin</h1>



<div id="accordion">

  <h3>Page d'acceuil</h3>
  <div>
      <%= link_to new_restaurant_section_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "plus" %> Ajouter du texte
      <% end %>
  </div>

  <h3>Carte</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">
      <%= link_to new_restaurant_dish_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "plus" %> ajouter un plat
      <% end %>

      <%= link_to restaurant_dishes_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> gérer les plats
      <% end %>

      <a class="btn btn-default" href="#"><%= glyphicon "pencil" %> Organiser les catégories</a>
    </div>
  </div>


  <h3>Menu</h3>
  <div>
    <div class="btn-group-vertical col-xs-12 " role="toolbar" aria-label="...">

      <%= link_to new_restaurant_menu_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "plus" %> ajouter un menu
      <% end %>

      <%= link_to restaurant_menus_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> gérer les menus
      <% end %>

    </div>
  </div>

  <h3>Blog</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

      <% if @restaurant.module_blog %>

        <%= link_to new_restaurant_post_path(@restaurant), class: "btn btn-default" do %>
          <%= glyphicon "plus" %> ajouter un article
        <% end %>

        <%= link_to restaurant_posts_path(@restaurant), class: "btn btn-default" do %>
          <%= glyphicon "pencil" %> gérer les articles
        <% end %>

        <%= link_to restaurant_activate_module_path(@restaurant), class: "btn btn-default", method: :patch do %>
          <%= glyphicon "unchecked" %> désactiver le blog
        <% end %>

      <% else %>

        <%= link_to restaurant_activate_module_path(@restaurant, module: 'blog'), class: "btn btn-default", method: :patch do %>
          <%= glyphicon "unchecked" %> <%= @restaurant.module_blog ? "désactiver" : "activer"  %> le blog
        <% end %>

      <% end %>

    </div>
  </div>

  <h3>Réservations</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

      <% if false # @restaurant.module_booking %>

      <% else %>

        <%= link_to edit_restaurant_path(@restaurant), class: "btn btn-default" do %>
          <%= glyphicon "unchecked" %> activer les réservations
        <% end %>

      <% end %>
    </div>
  </div>

  <h3>Restaurants</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

      <%= link_to new_restaurant_path, class: "btn btn-default" do %>
        <%= glyphicon "plus" %> Créer un restaurant
      <% end %>

      <%= link_to edit_restaurant_path(@restaurant), class: "btn btn-default" do %>
        <%= glyphicon "pencil" %> editer ce restaurant
      <% end %>

    </div> 
  </div>

  <h3>Modules</h3>
  <div>
    <div class="btn-group-vertical col-xs-12" role="toolbar" aria-label="...">

        
      <%= link_to restaurant_activate_module_path(@restaurant, module: 'blog'), class: "btn btn-default", method: :patch do %>
        <%= glyphicon "unchecked" %> <%= @restaurant.module_blog ? "désactiver" : "activer"  %> le blog
      <% end %>

      <%= link_to restaurant_activate_module_path(@restaurant, module: 'allergens'), class: "btn btn-default", method: :patch do %>
        <%= glyphicon "unchecked" %> <%= @restaurant.module_allergens ? "désactiver" : "activer"  %> les allergènes
      <% end %>

    </div> 
  </div>

</div>
