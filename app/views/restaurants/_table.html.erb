<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% restaurants.each do |restaurant| %>
      <tr>
        <td><%= render 'restaurants/link', restaurant: restaurant, cache: true %></td>
        <td><%= restaurant.complete_address %></td>
        <td>
          <% if current_user == restaurant.user %>
            <%= link_to 'Voir le site', restaurant_with_session_key_url(restaurant), class: 'btn btn-primary' %>
            <%= link_to 'Editer', edit_restaurant_path(restaurant) , class: 'btn btn-warning' %>
            <%= link_to 'Supprimer', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
          <% else %>
            <%= link_to 'Voir le site', root_url(subdomain: restaurant), class: 'btn btn-primary' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>