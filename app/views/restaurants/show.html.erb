<pre>
  <%= tooltip  "Le nom de votre restaurant peu'" %>
</pre>

<div class="row restaurant-header" style="background-image: url(<%= @restaurant.picture %>)"
  <%= tooltip 'Cette image de fond peut être changé dans la section  "editer le restaurant"' %> >

  <div class="col-xs-12">
    <h1  <%= tooltip 'Le nom de votre restaurant peut être changé dans la section "editer le restaurant"' %> ><%= logo_tag @restaurant %><%= @restaurant.name %></h1>
  </div>
</div>

<% if admin? %>
  <div class="row admin">
    <div class="col-xs-12"">
      <div class="col-xs-12">
        <%= render 'shared/toolbar_sections' %>
        <%= render 'shared/toolbar_restaurant' %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'sections/list', sections: @restaurant.sections %>


<div class="row">
  <div class="col-xs-12">
    <div class="btn-group" role="toolbar" aria-label="...">
      <%= link_to 'La carte', dishes_path, class: "btn btn-lg btn-default" %>
      <%= link_to 'Les menus', menus_path, class: "btn btn-lg btn-default" %>
      <%= link_to "Les horaires d'ouverture", contact_path, class: "btn btn-lg btn-default" %>
      <%= link_to 'Nous contacter', contact_path, class: "btn btn-lg btn-default" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>Les horaires d'ouvertures</h2>
    <%= render 'opening_hours/details', opening_hours: @restaurant.opening_hours %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p><%= glyphicon 'home' %> <%= @restaurant.complete_address %></p>
    <p><%= glyphicon 'user' %> <%= link_to @restaurant.user.complete_name, @restaurant.user %></p>
  </div>
</div>

